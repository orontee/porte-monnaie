#!/usr/bin/bash

VIRTUALENV_PATH="$HOME/.virtualenvs/purse"
PYTHONPATH="$HOME/Projets/Site/purse_project/site"

source "$VIRTUALENV_PATH/bin/activate"

export DJANGO_SETTINGS_MODULE='purse.settings.local'
export DJANGO_SECRET_KEY='public fake key'
export DJANGO_ADMIN_NAME='Matthias Meulien'
export DJANGO_ADMIN_EMAIL='matthias.meulien@example.com'
export PYTHONPATH

echo "To install the required dependencies, use:"
echo "   pip install -r requirements_dev.txt"

echo "To run the debug server, use:"
echo "   django-admin.py runserver"
